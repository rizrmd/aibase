# Logrotate configuration for maldevta backend logs
# Place this file in /etc/logrotate.d/ or copy to /etc/logrotate.conf

/home/vendor.rahman@bpk.go.id/maldevta/data/backend/logs/*.log {
    daily
    rotate 14
    compress
    delaycompress
    missingok
    notifempty
    create 0640 vendor.rahman domain users
    sharedscripts
    postrotate
        # Optional: restart service or send signal to flush logs
        # systemctl reload maldevta.service > /dev/null 2>&1 || true
    endscript
    maxsize 100M
}

# Service log
/home/vendor.rahman@bpk.go.id/maldevta/data/service.log {
    daily
    rotate 7
    compress
    delaycompress
    missingok
    notifempty
    create 0644 vendor.rahman domain users
    maxsize 50M
}
